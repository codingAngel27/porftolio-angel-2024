---
import SectionContainer from "../components/SectionContainer.astro";
import Layout from '../layouts/Layout.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import GitHub from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/MailIcon.astro';
import BriefCase from '../components/icons/BriefCase.astro';
import SocialPill from "../components/SocialPill.astro";
import Projects from "../components/Projects.astro";
import Experiencia from "../components/Experiencia.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Footer from "../components/Footer.astro";
import ButtonMain from "../components/ButtonMain.astro";
import Habilidades from "../components/Habilidades.astro";
import Contacto from "../components/Contacto.astro";
import ContactIcon from "../components/icons/ContactIcon.astro";

---

<Layout title="Portfolio AngelDev"
description="Especialista en desarrollo FrontEnd">
	<main class="px-4 xl:mx-1 xl:w-[1200px] mx-auto">
		<SectionContainer class="flex flex-col mx-auto py-44 h-vh flex-wrap">
			
			<div class="text-[#b92a2a] font-[900] flex flex-row flex-wrap pb-10 my-2 mt-2 dark:text-[#fff] text-3xl md:text-4xl lg:text-5xl">
				<div class="text-[#b92a2a] dark:text-[#fff] console-container absolute">
				  Hey, <span id="text"></span>
				  <div class="console-underscore" id="console">&#95;</div>
				</div>
			</div>
			  <h2 class="text-customPurple dark:text-[#fff] text-xl mt-4 sm:text-2xl opacity-80 max-w-[800px] text-balance">Mi enfoque principal es crear soluciones innovadoras y eficientes para desafíos tecnológicos. Originario<span class="text-[#2CD3E1]"> de Lima, Perú,</span> busco constantemente oportunidades para ampliar mis conocimientos y enfrentar nuevos retos en el mundo de la informática. Mi objetivo es constribuir al avance tecnológico mientras sigo creciendo como profesional.<strong class="text-[#16FF00] opacity-70"> ¡Explora mi portfolio y descubre más sobre mis proyectos y logros.</strong></h2>
			<nav class=" text-customPurple2 dark:text-[#fff] flex gap-x-4 mt-4 flex-wrap">
				<SocialPill href="mailto:angelocana44@gmail.com">
					<MailIcon class="size-4 md:size-6 " />
					angelocana44@gmail.com
				</SocialPill>	
				<SocialPill href="https://www.linkedin.com/in/angel-ocana-celedonio">
						<LinkedIn class="size-4 md:size-6" />
						LinkedIn
					</SocialPill>
					<SocialPill href="https://github.com/codingAngel27">
						<GitHub class="size-4 md:size-6" />
						GitHub
					</SocialPill>
					
			</nav>
	<div class="mt-40 flex-1 gap-10">
			<ButtonMain />
		</div>
		</SectionContainer>
		<SectionContainer id="experiencia" class="mx-auto h-vh py-35 flex justify-center flex-col items-center">
			<h2 class="text-2xl font-extrabold mb-6 flex gap-x-3 items-center text-customPurple2 dark:text-[#fff]">
				<BriefCase class="size-7" />
				Experiencia
			</h2>
			<Experiencia/>
		</SectionContainer>
		<SectionContainer id="proyectos" class="mx-auto h-vh py-35 flex justify-center flex-col items-center">
			<h2 class="text-2xl font-extrabold mb-6 flex gap-x-3 items-center text-customPurple2 dark:text-[#fff]">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects class="" />
		</SectionContainer>
		<SectionContainer id="habilidades" class="mx-auto h-vh py-44 flex justify-center flex-col items-center">
			<h2 class="text-2xl font-extrabold mb-6 flex gap-x-3 items-center text-customPurple2 dark:text-[#fff]">
				<CodeIcon class="size-7" />
				Habilidades
			</h2>
		<Habilidades />
	    </SectionContainer>
		<SectionContainer id="contacto" class="mx-auto h-vh py-44 flex justify-center flex-col items-center">
			<h2 class="text-2xl font-extrabold mb-6 flex gap-x-3 items-center text-customPurple2 dark:text-[#fff]">
				<ContactIcon class="size-7" />
				Contáctame
			</h2>
			<Contacto />
		</SectionContainer>
		<Footer></Footer>
	</main>
	<script src="../components/javascript/text.js">
	</script>
</Layout>
